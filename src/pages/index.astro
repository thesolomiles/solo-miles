---
import Layout from "../layouts/Layout.astro";
---

<!-- The nav bar has been removed as requested. -->
<style>
  .animated-gradient-bg {
    min-height: 100vh;
    width: 100vw;
    margin: 0;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #181a20;
    position: relative;
    overflow: hidden;
    border: none;
  }
  .animated-gradient-bg::before {
    content: "";
    position: absolute;
    /* Move up so the top half of the radial gradient is cut off */
    top: -37.5vh;
    left: 50%;
    transform: translateX(-50%);
    width: 150vw;
    height: 150vh;
    pointer-events: none;
    /* Radial gradient, centered vertically above the page, fading out by 75% of the page height */
    background: radial-gradient(
      ellipse at 50% 25%,
      rgba(255,255,255,0.18) 0%,
      rgba(255,255,255,0.08) 40%,
      rgba(255,255,255,0.00) 75%
    );
    z-index: 0;
  }
  .animated-gradient-bg > * {
    position: relative;
    z-index: 1;
  }
</style>
<style>
  @keyframes glowFade {
    0% {
      filter: drop-shadow(0 -8px 24px rgba(255,255,255,0.10))
              drop-shadow(0 4px 24px rgba(0,0,0,0.35));
    }
    50% {
      filter: drop-shadow(0 -8px 32px rgba(255,255,255,0.28))
              drop-shadow(0 4px 24px rgba(0,0,0,0.35));
    }
    100% {
      filter: drop-shadow(0 -8px 24px rgba(255,255,255,0.10))
              drop-shadow(0 4px 24px rgba(0,0,0,0.35));
    }
  }
  .logo-glow-animate {
    animation: glowFade 2.8s ease-in-out infinite;
    width: 100%;
    height: auto;
    display: block;
  }
</style>
<div class="animated-gradient-bg">
  <div class="mx-auto" style="max-width: 240px;">
    <img
      src="/logos/vertical-white.svg"
      alt="The Solo Miles Logo"
      class="logo-glow-animate"
    />
  </div>
</div>
